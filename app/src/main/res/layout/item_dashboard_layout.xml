<?xml version="1.0" encoding="utf-8"?>
<com.app.leopoly.common.RoundLinerLayoutNormal xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_icons_background" />

        <ImageView
            android:id="@+id/menuIconImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_above="@id/menuNameTxt"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_man" />

        <TextView
            android:id="@+id/menuNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/muli_regular"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

</com.app.leopoly.common.RoundLinerLayoutNormal>

