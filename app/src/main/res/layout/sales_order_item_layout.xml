<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:cardBackgroundColor="@color/store_bg"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_13sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="center_vertical"
                            android:text="P.S.NO"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="start"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text=" : "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/psNoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/partyNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="start"
                            android:text="PARTY NAME :"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:id="@+id/colonLabel"-->
<!--                            android:layout_toEndOf="@+id/partyNameLabel"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/muli_bold"-->
<!--                            android:gravity="start"-->
<!--                            android:paddingBottom="@dimen/_1sdp"-->
<!--                            android:text=" : "-->
<!--                            android:textColor="@color/colorBlack"-->
<!--                            android:textSize="@dimen/_10sdp"-->
<!--                            android:textStyle="bold" />-->

<!--                        <TextView-->
<!--                            android:layout_toEndOf="@+id/colonLabel"-->
<!--                            android:id="@+id/partyNameTxt"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/muli_bold"-->
<!--                            android:includeFontPadding="false"-->
<!--                            android:lineSpacingExtra="0dp"-->
<!--                            android:text="uhkfioahfioahfioahfilahpfiasdfilahsdlihasodidhklsdkasmdkasdasdasdasd"-->
<!--                            android:textColor="@color/colorBlack"-->
<!--                            android:textSize="@dimen/_10sdp"-->
<!--                            android:textStyle="bold" />-->

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="start"
                            android:text="ITEM NAME"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="start"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text=" : "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/itemNameTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_bold"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ellips" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/deleteItem"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/delete" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>