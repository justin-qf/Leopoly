<?xml version="1.0" encoding="utf-8"?>
<layout>
  <LinearLayout
      android:orientation="vertical"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".activity.SupplyActivity.SupplyActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_height="@dimen/_80sdp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.PopupOverlay">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="@dimen/_25sdp">

        <ImageView
            android:id="@+id/backIcons"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:src="@drawable/ic_back_icon" />

        <TextView
            android:id="@+id/titleToolbar"
            style="@style/toolbarTextStyle"
            android:layout_centerHorizontal="true"
            />
      </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout

        android:id="@+id/detailsTypeSelection"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/viewPendingSupply"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/muli_medium"
            android:text="Pending For Supply"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
      </RelativeLayout>
      <View
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/header"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <RelativeLayout
          android:id="@+id/viewLastSupply"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/muli_medium"
            android:text="Last 15 Days Supply Details"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
      </RelativeLayout>
      <View
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/header"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
