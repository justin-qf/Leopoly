<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  >

                    <TextView
                        android:id="@+id/title"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/muli_regular"
                        android:textColor="@color/carbon_black"
                        android:layout_alignParentTop="true"
                        android:text="Order Success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_below="@+id/title"
                        android:background="@color/lightGray"
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <ImageView
                        android:id="@+id/dialogCloseImg"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_close" />
                    <LinearLayout
                        android:layout_below="@+id/line"
                        android:id="@+id/content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/placeOrderTxt"
                            android:text="dfgklfdglkfdngklfdn gkldfng"
                            android:fontFamily="@font/muli_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                             android:text="- Order Submitted once can be modified within 15 minutes."
                            android:fontFamily="@font/muli_regular"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/remarksLayout"
                            android:visibility="visible"
                            style="@style/LoginTextInputLayoutStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Remark"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/remarksEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine|textCapSentences"
                                android:gravity="start"
                                android:fontFamily="@font/muli_regular"
                                android:imeOptions="actionDone"
                                android:lines="4"
                                android:maxLines="10"
                                android:paddingEnd="@dimen/_15sdp"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.button.MaterialButton

                            android:layout_marginTop="@dimen/_7sdp"
                            android:id="@+id/submit"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="end|center_horizontal"
                            android:elevation="@dimen/_10sdp"
                            android:fontFamily="@font/muli_regular"
                            android:text="@string/submit_txt"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_11sdp"
                            app:cornerRadius="@dimen/_15sdp"
                            app:elevation="@dimen/_20sdp" />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
</layout>