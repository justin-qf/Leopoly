<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary_two</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="hintTextColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="RoundedAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
    </style>

    <style name="spinnerEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="dropDownListViewStyle">@style/dropDownList</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="hintTextColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="dropDownList">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="textLayoutForDescription" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>

        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/muli_regular</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.8dp</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:title" />
        <item name="android:layout_marginStart">-5dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>

        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>


    <style name="toolbarTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/muli_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
    </style>

    <style name="helperTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/redColor</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="helperTextTextColor">@color/redColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="textInputEditTextForMediumScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_37sdp</item>
        <item name="paddingStart">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_1sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="textInputEditText">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="paddingStart">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_1sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="background">@color/colorWhite</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryTransperent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/colorPrimaryTransperent</item>
        <item name="android:windowBackground">@color/colorPrimaryTransperent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="MyAlertDialogStyle_extend" parent="MyAlertDialogStyle">
        <item name="android:textColor">@color/colorPrimaryTransperent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/colorPrimaryTransperent</item>
        <item name="android:windowBackground">@color/colorPrimaryTransperent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="spinnerStyle">@style/SplashTheme</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>